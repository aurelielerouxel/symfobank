{% extends 'template.html.twig' %}

{% block title %}Vos comptes{% endblock %}

{% block main %}
    <div class="container">
        <h2 class="my-5 text-center">Vos comptes</h2>
        <div class="row">
            {% for account in accounts %}

                <div class="col-12 col-sm-10 col-md-5">
                    <div class="card text-center">
                        <section class="card-body">
                            <div class="mb-5">
                                <h5 class="card-title">Type de compte : {{account.accountType}}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Numéro de compte : {{account.accountNumber}}</h6>
                            </div>
                            {# <ul class="list-group list-group-flush">
                                <li class="list-group-item">Nom & Prénom</li>
                            </ul> #}
                            <a href="#" class="btn btn-dark">Dépot/Retrait</a>
                            <a href="#" class="btn btn-dark">Virement</a>
                            <a href="#" class="btn btn-dark">Cloturer</a>
                            <hr>
                            <a href="singleAccount" class="text-danger">Voir le compte</a>
                        </section>
                    </div> 
                </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}

